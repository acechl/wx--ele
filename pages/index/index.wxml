<scroll-view scroll-y = "true" bindscroll="scrollDown" style="height:{{winHeight}}px" lower-threshold = "100" bindscrolltolower="scrollToLower" enable-back-to-top = "true">
<view class="index" style="height: 1000px">
    <view class="top">
        <view class="address">
            <text bindtap="clickAddress">{{address}}</text>
        </view>
        <view  style="position:{{position}};padding-top:{{top}}px;padding-bottom:{{bottom}}px;height:{{height}}px" class="search">
            <view  bindtap="clickMenu" class="searcher">
                <view>搜索商家、商品名称
                    <icon type="search" size="12" color="black"></icon>
                </view>
            </view>
        </view>
        <view class="classify" style="margin-top:{{m_top}}px">
            <scroll-view scroll-x = "true" scroll-left="0">
                <view>
                    <view wx:for="{{type.type}}" class="type" id="{{item.name}}" bindtap="clickType">{{item.name}}</view>
                </view>
            </scroll-view>
        </view>
    </view>
    <view class="introduce">
       <swiper indicator-dots="{{indicatorDots}}" autoplay="true" interval="5000" duration="500" indicator-dots="true">
                <swiper-item>
                    <view wx:for="{{intro1}}" class="contain">
                        <image src="{{item.img}}"/>
                        <view class="title">{{item.title}}</view>
                    </view>
                </swiper-item>
                <swiper-item class="second">
                    <view  wx:for="{{intro2}}" class="contain">
                        <image src="{{item.img}}"/>
                        <view class="title">{{item.title}}</view>
                    </view>
                </swiper-item>
        </swiper>
    </view>
    <view class="adverting">
        <image src="../../images/advertising.webp" class="alone"/>
        <view class="topper clearfix">
            <view wx:for="{{a_top.type}}" class="a_top">
                <view style="color:{{item.color1}}">{{item.title}}</view>
                <view>{{item.introduce}}</view>
                <view style="color:{{item.color2}}">{{item.num}}</view>
                <image src="{{item.img}}"/>
            </view>
        </view>
        <view class="bottom clearfix">
            <view wx:for="{{a_bottom.type}}" class="a_bottom">
                <view>{{item.title}}</view>
                <view style="color:{{item.color1}};border:1px solid {{item.color2}}">{{item.introduce}}</view>
                <image src="{{item.img}}"/>
            </view>
        </view>
    </view>
    <view class="space"></view>
    <view class="in_shop">
        <view class="intro">推荐商家</view>
        <view wx:for="{{shop_intro.type}}" class="single" wx:for-index="idx">
            <image src="{{item.img}}"></image>
            <view class="content">
                <view class="title clearfix">
                    <view class="title_left">
                        <text wx:if="{{item.brand == 1}}" class="brand">品牌</text>
                        <text class="name">{{item.names}}</text>
                    </view>
                    <view class="title_right">
                        <text wx:if="{{item.bao == 1}}" class="sure">保</text>
                        <text wx:if="{{item.piao == 1}}" class="sure">票</text>
                    </view>
                </view>
                <view class="second clearfix">
                   <view class="second_left">
                        <import src="../../template/star/star.wxml"></import>
                        <template is="star" data="{{star:item.average}}"></template>
                        <text class="average">{{item.average}}</text>
                        <text>月售{{item.num}}单</text>
                   </view>
                   <view class="second_right" wx:if="{{item.send == 1}}">
                        蜂鸟专送
                   </view>
                </view>
                <view class="third clearfix">
                    <view>￥{{item.fare}}起送 | 配送费￥{{item.fare1}}</view>
                    <view>{{item.distance}} | {{item.time}}分钟</view>
                </view>
                <view class="forth" wx:if="{{item.good == 1}}">
                    <text></text>
                    口碑人气好店
                </view>
                <view class="fifth clearfix" style="max-height:{{flag[idx].height}}">
                    <import is="activity" src="../../template/activity/activity.wxml"/>
                    <template is="activity" data = "{{discount:item.discount,number:item.number,deg:deg,flag:flag,idx:idx}}"></template>
                </view>
                
            </view>
        </view>
    </view>
  <view class="loading">{{meg}}</view>
</view>
 </scroll-view>
