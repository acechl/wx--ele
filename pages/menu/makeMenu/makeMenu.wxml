<view class="makeMenu">
    <view class="search">
        <view class="left" bindtap="goBack">{{"<"}}</view>
        <view class="input">
            <view class="icon"></view>
            <input type="text" placeholder="输入商家、商品名称" bindinput="searchInput" bindfocus="searchFocus" bindblur="searchBlur" value="{{value}}"/>
            <view class="delete" wx:if="{{delete}}" bindtap="searchDelete">x</view>
        </view>
        <view class="click" bindtap="searchItem">搜索</view>
    </view>
    <view class="history" wx:if="{{history.type[0] && !search}}" style="padding-top:40px;">
        <view class="clearfix">
            <view class="title">历史搜索</view>
            <view class="empty" bindtap="historyEmpty">清空</view>
        </view>
        <view class="content clearfix">
            <view wx:for="{{history.type}}" class="single" bindtap="searchItem1" data-value="{{item.name}}">{{item.name}}</view>
        </view>
    </view>
    <view class="hot" wx:if="{{!search}}" style="{{!(history.type[0] && !search)?'padding-top:40px':''}}">
        <view class="title">热门搜索</view>
        <view class="content clearfix">
            <view wx:for="{{hot.type}}" class="single" bindtap="searchItem1" data-value="{{item.name}}">{{item.name}}</view>
        </view>
    </view>
    <view class="bg" wx:if="{{show.classify || show.rank || show.selection}}" style="height:{{winHeight - 101}}px" bindtap="go_select"></view>
    <view class="select" wx:if="{{search}}" style="position:fixed;top:30px;width: 100%">
        <view class="title clearfix">
            <view class="{{show.classify?'selected':''}} classity_title" bindtap="select_tap" data-attr="classify">分类<text class="{{show.classify?'arrow_up tran_selected':''}} arrow"></text></view>
            <view class="{{show.rank?'selected':''}} rank_title" bindtap="select_tap" data-attr="rank">排序<text class="{{show.rank?'arrow_up tran_selected':''}} arrow"></text></view>
            <view class="{{show.selection?'selected':''}} selection_title" bindtap="select_tap" data-attr="selection">筛选<text class="{{show.selection?'arrow_up tran_selected':''}} arrow"></text></view>
        </view>
        <view class="content">
            <view class="classify_content clearfix" wx:if="{{show.classify}}">
                <view class="left">
                    <view wx:for="{{classify_left.type}}" class="{{selection[index]?'c_s':'s_s'}} clearfix c_c" bindtap="classify_select" wx:for-index="index" data-index="{{index}}">
                        <view>{{item.name}}</view>
                        <view>{{item.num}}</view>
                    </view>
                </view>
                <view class="right">
                   <view wx:for="{{classify_right.type}}" class="clearfix c_c" wx:for-index="index" data-index="{{index}}" wx:if="{{!selection[0]}}" bindtap="go_select">
                        <view>{{item.name}}</view>
                        <view>{{item.num}}</view>
                   </view>
                </view>
            </view>
            <view class="rank_content" wx:if="{{show.rank}}">
                <view wx:for="{{rank_type.type}}">{{item.name}}</view>
            </view>
            <view class="selection_content" wx:if="{{show.selection}}">
                <view class="first">
                    <view class="title">配送方式</view>
                    <view class="content clearfix">
                        <view wx:for="{{send_type.type}}" bindtap="itemTap" data-id="{{item.id}}" data-attr="send_type" wx:for-index="idx" data-index="{{idx}}" class="{{selected.send_type[idx]?'choosed':''}}">{{item.name}}</view>
                    </view>
                </view>
                <view class="second">
                    <view class="title">人均消费</view>
                    <view class="content clearfix">
                        <view wx:for="{{consume.type}}" bindtap="itemTap" data-id="{{item.id}}" data-attr="consume" wx:for-index="idx" data-index="{{idx}}" class="{{selected.consume[idx]?'choosed':''}}">￥{{item.name}}</view>
                    </view>
                </view>
                <view class="thild">
                    <view class="title">优惠活动</view>
                    <view class="content clearfix">
                        <view wx:for="{{activity_type.type}}" bindtap="itemTap" data-id="{{item.id}}" data-attr="activity_type" wx:for-index="idx" data-index="{{idx}}" class="{{selected.activity_type[idx]?'choosed':''}}">
                            <text style="background-color:{{item.color}};color:#fff">{{item.title}}</text>
                            <text>{{item.name}}</text>
                        </view>
                    </view>
                </view>
                <view class="forth">
                    <view class="title">商家属性(可多选)</view>
                    <view  class="content clearfix">
                        <view wx:for="{{shop_attr.type}}" bindtap="itemTap" data-id="{{item.id}}" data-attr="shop_attr" wx:for-index="idx" data-index="{{idx}}" class="{{selected.shop_attr[idx]?'choosed':''}}">
                            <text style="color:{{item.color}};border:1px solid {{item.color}}">{{item.title}}</text>
                            <text>{{item.name}}</text>
                        </view>
                    </view>
                </view>
                <view class="fifth">
                   <button type="default" size="defaultSize" bindtap="clearTap">清空</button>
                   <button type="default" size="defaultSize" bindtap="sureTap">确定<text wx:if="{{num>0}}">({{num}})</text></button>
                </view>
            </view>
        </view>
    </view>
    <view class="filtrate" wx:if="{{search}}" style="position: fixed;padding-top:60px">
       <scroll-view scroll-x="true" style="width: 100%">
        <view class="clearfix" style="height:30px">
            <view wx:for="{{intro_food.type}}" class="single">{{item.name}}</view>
        </view>
       </scroll-view>
    </view>
    <view class="food_intro" wx:if="{{search}}" style="padding-top: 100px">
        <view wx:for="{{search_food.type}}" class="single"  wx:for-index="idx">
            <view class="shop_detail clearfix">
                <image src="{{item.img}}"/>
                <view>
                    <view class="top">
                        <view>{{item.name}}</view>
                    </view>
                    <view class="bottom clearfix">
                        <view>评论{{item.average}} | 起送费￥{{item.fare}} | 配送费￥{{item.fare1}}</view>
                        <view>{{item.distance}} | {{time}}分钟</view>
                    </view>
                </view>
            </view>
             <view  style="height:{{more[idx].height}}"  class="food_detail">
                 <view wx:for="{{item.food}}" wx:for-item="items" class="contents">
                    <image src="{{items.img}}"></image>
                    <view class="content">
                        <view>{{items.name}}</view>
                        <view>月售{{items.num}}份 好评率{{items.good}}</view>
                        <view>￥{{items.prize}}</view>
                    </view>
                </view>
             </view>
            <view class="more" bindtap="goods_fade" data-index="{{idx}}">{{more[idx].name}}<text class="{{more[idx].name == '收起'?'arrow_up':''}} arrow"></text></view>
        </view>
    </view>
</view>