.header {
  width: 100%;
  background-image: linear-gradient(90deg, #0af, #0085ff);
  color: #fff;
  height: 40px;
  line-height: 40px;
  position: relative;
  box-sizing: border-box;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}
.header .goBack {
  position: absolute;
  top: 0;
  left: 0;
  height: 40px;
  width: 40px;
  padding-left: 10px;
  font-family: Consolas;
  font-size: 46rpx;
}
.header .space {
  position: absolute;
  top: 0;
  right: 0;
  height: 40px;
  width: 40px;
}
.mb10 {
  margin-bottom: 10px;
}
.tips {
  position: fixed;
  left: 50%;
  top: 30%;
  z-index: 2;
  transform: translate(-50%, -50%);
}
.wx_toast {
  padding: 5px 10px;
  line-height: 30px;
  border-radius: 20px;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
}
.passwordEdit {
  width: 100%;
  background-color: #f5f5f5;
}
.passwordEdit .pass {
  background-color: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.passwordEdit .pass input {
  height: 40px;
  line-height: 40px;
  padding-left: 10px;
  margin-bottom: 10px;
  background-color: #f2f2f2;
  border: 1px solid #ddd;
  box-sizing: border-box;
  width: 100%;
}
.passwordEdit button {
  width: 88%;
  margin-left: 6%;
  height: 40px;
  line-height: 40px;
  color: #fff;
  background-color: #c7c7c7;
  margin-top: 20px;
}
