.header {
  width: 100%;
  background-image: linear-gradient(90deg, #0af, #0085ff);
  color: #fff;
  height: 40px;
  line-height: 40px;
  position: relative;
  box-sizing: border-box;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}
.header .goBack {
  position: absolute;
  top: 0;
  left: 0;
  height: 40px;
  width: 40px;
  padding-left: 10px;
  -webkit-font-family: Consolas;
  font-size: 46rpx;
}
.header .space {
  position: absolute;
  top: 0;
  right: 0;
  height: 40px;
  width: 40px;
}
.mb10 {
  margin-bottom: 10px;
}
.tips {
  position: fixed;
  left: 50%;
  top: 30%;
  z-index: 2;
  transform: translate(-50%, -50%);
}
.nickNameEdit {
  width: 100%;
  background-color: #f5f5f5;
}
.nickNameEdit .input {
  margin-bottom: 20px;
}
.nickNameEdit .input input {
  width: 100%;
  padding-left: 20px;
  box-sizing: border-box;
  color: #333;
  height: 40px;
  line-height: 40px;
  margin-top: 10px;
  background-color: #fff;
  font-size: 30rpx;
}
.nickNameEdit button {
  width: 88%;
  margin-left: 6%;
  background-color: #c7c7c7;
  color: #fff;
  border-radius: 5px;
  height: 30px;
  line-height: 30px;
  font-size: 30rpx;
}
.nickNameEdit .button {
  background-color: #4cd96f;
}
