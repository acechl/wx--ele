.header {
  width: 100%;
  background-image: linear-gradient(90deg, #0af, #0085ff);
  color: #fff;
  height: 40px;
  line-height: 40px;
  position: relative;
  box-sizing: border-box;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}
.header .goBack {
  position: absolute;
  top: 0;
  left: 0;
  height: 40px;
  width: 40px;
  padding-left: 10px;
  -webkit-font-family: Consolas;
  font-size: 46rpx;
}
.header .space {
  position: absolute;
  top: 0;
  right: 0;
  height: 40px;
  width: 40px;
}
.mb10 {
  margin-bottom: 10px;
}
.tips {
  position: fixed;
  left: 50%;
  top: 30%;
  z-index: 2;
  transform: translate(-50%, -50%);
}
.wx_toast {
  padding: 5px 10px;
  line-height: 30px;
  border-radius: 20px;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
}
.phoneEdit {
  width: 100%;
  background-color: #f5f5f5;
}
.phoneEdit .phone {
  border-bottom: 1px solid #ddd;
  font-size: 30rpx;
}
.phoneEdit .phone > view:first-child {
  background-color: #fff;
  height: 50px;
  line-height: 50px;
  position: relative;
}
.phoneEdit .phone > view:first-child .number {
  padding: 0 10px;
  box-sizing: border-box;
  color: #333;
}
.phoneEdit .phone > view:first-child input {
  padding-left: 10px;
  box-sizing: border-box;
  height: 50px;
}
.phoneEdit .phone > view:first-child .getVcode {
  position: absolute;
  background-color: #0097ff;
  color: #fff;
  border: 1px solid #0097ff;
  padding: 3px 5px;
  right: 10px;
  height: 30px;
  line-height: 30px;
  top: 10px;
}
.phoneEdit .phone .vcode {
  height: 50px;
  line-height: 50px;
  background-color: #fff;
  margin-bottom: 20px;
  box-sizing: border-box;
  padding: 0 10px;
  color: #333;
  position: relative;
  font-size: 30rpx;
}
.phoneEdit .phone .vcode view {
  position: absolute;
  left: 10px;
  height: 50px;
  line-height: 50px;
  top: 0;
}
.phoneEdit .phone .vcode input {
  padding-left: 60px;
  height: 50px;
  line-height: 50px;
}
.phoneEdit .phone button {
  width: 88%;
  margin-left: 6%;
  color: #fff;
  background-color: #c7c7c7;
  height: 40px;
  line-height: 40px;
}
.phoneEdit .phone .button {
  background-color: #4cd96f;
}
